<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/book"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/book1" />

    <TextView
        android:id="@+id/tv2_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KLARA AND THE SUN"
        android:textSize="20dp"/>

    <RatingBar
        android:id="@+id/ratingBar0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/book00"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/book3" />

    <TextView
        android:id="@+id/tv2_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نظرية الفستق 2"
        android:textSize="20dp"/>

    <RatingBar
        android:id="@+id/ratingBar00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        tools:ignore="SpeakableTextPresentCheck" />


</LinearLayout>